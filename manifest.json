{
  "name": "__MSG_manifest_name__",
  "version": "3.8.7",
  "manifest_version": 2,
  "description": "__MSG_manifest_description__",
  "default_locale":"en",
  "minimum_chrome_version": "29",
  "omnibox": {
    "keyword" : "__MSG_history_title__"
  },
  "icons": {
    "16": "images/icons/icon16.png",
    "48": "images/icons/icon48.png",
    "128": "images/icons/icon128.png"
  },
  "chrome_url_overrides": {
    "history": "index.html"
  },
  "offline_enabled": true,
  "browser_action": {
    "default_icon": {
      "19": "images/icons/icon19.png",
      "38": "images/icons/icon38.png"
    },
    "default_title": "__MSG_manifest_browser_action_title__"
  },
  "background": {
    "scripts": [
      "scripts/namespace.js",
      "bower_components/honeybadger.js/honeybadger.js",
      "bower_components/underscore/underscore-min.js",
      "bower_components/bower-google-analytics/analytics.js",
      "scripts/trackers/error_tracker.js",
      "scripts/trackers/analytics_tracker.js",
      "scripts/chrome/page_context_menu.js",
      "scripts/chrome/selection_context_menu.js",
      "scripts/chrome/omnibox.js",
      "scripts/chrome/browser_actions.js",
      "scripts/chrome/sync_store.js",
      "scripts/chrome/i18n.js",
      "scripts/initialize_background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "chrome://favicon/",
    "history",
    "tabs",
    "contextMenus",
    "storage",
    "unlimitedStorage",
    "identity",
    "sessions",
    "downloads"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://wallet.google.com https://sandbox.google.com https://ssl.google-analytics.com https://platform.twitter.com https://apis.google.com; object-src 'self';"
}
